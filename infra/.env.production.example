# =============================================================================
# Metzudat HaLikud - Production Environment Variables
# =============================================================================
# Copy this file to .env in the infra/ directory and fill in the values.

# Server
PORT=3000
NODE_ENV=production
API_PREFIX=api/v1

# Database (PostgreSQL)
DATABASE_NAME=likud_news
DATABASE_USER=likud_prod
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DATABASE_SSL=true
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# Redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# JWT Authentication (use strong random strings, 32+ characters)
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
JWT_EXPIRATION=3600
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
JWT_REFRESH_EXPIRATION=604800

# AWS S3
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=likud-news-media
AWS_CLOUDFRONT_DOMAIN=

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=https://admin.your-domain.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Admin Panel
NEXT_PUBLIC_API_URL=https://your-domain.com/api/v1
